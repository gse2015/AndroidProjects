<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gse.calculator.MainActivity">

    <LinearLayout
        android:id="@+id/AdsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/AdsLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/AdsLinearLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAds1"
            android:text="Ads1"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAds2"
            android:text="Ads2"
            android:textAllCaps="false"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="end"
        android:layout_gravity="end"
        android:textSize="50sp"
        android:layout_below="@+id/AdsLinearLayout1"/>
    <TableLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvResult">

        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/btClear"
                android:text="clear"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btBackspace"
                android:text="back"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/btLeftBracket"
                android:text="("
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/btRightBracket"
                android:text=")"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/bt7"
                android:text="7"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/bt8"
                android:text="8"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/bt9"
                android:text="9"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/btDivide"
                android:text="/"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/bt4"
                android:text="4"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/bt5"
                android:text="5"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/bt6"
                android:text="6"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/btMultiply"
                android:text="*"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/bt1"
                android:text="1"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/bt2"
                android:text="2"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/bt3"
                android:text="3"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/btSubtract"
                android:text="-"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/btDot"
                android:text="."
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/bt0"
                android:text="0"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/btEqual"
                android:text="="
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/btAdd"
                android:text="+"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>
