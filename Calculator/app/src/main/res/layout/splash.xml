<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fffdfefa"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="gse.calculator.MainActivity">
    <!--xmlns:baiduadsdk="http://schemas.android.com/apk/res/com.sdkdemo">-->

    <RelativeLayout
        android:id="@+id/bottomRl"
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="20.0dip"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/bottomIcon"
            android:background="@drawable/logo"
            android:layout_width="200.0dip"
            android:layout_height="70.0dip"
            android:layout_centerHorizontal="true"
            android:contentDescription="contentDescription" />

        <TextView
            android:textColor="#ff000000"
            android:id="@+id/bottonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上方有开屏广告位"
            android:layout_below="@id/bottomIcon"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adsRl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottomRl" />
</RelativeLayout>